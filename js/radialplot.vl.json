{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 350,
  "height": 350,
  "data": {
    "url": "https://raw.githubusercontent.com/Ethanlyii0001/FIT3179_Visualisation2/main/data/averaged_features_by_country.csv"
  },
  "params": [
    {
      "name": "topNumber",
      "value": 20,
      "bind": {
        "input": "range",
        "min": 10,
        "max": 166,
        "step": 1
      }
    },
    {
      "name": "continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "layer": [
    {
      "params": [
        {
          "name": "highlight",
          "select": {"type": "point", "on": "mouseover"}
        }
      ],
      "mark": {"type": "arc", "innerRadius": 30},
      "encoding": {
        "theta": {
          "field": "Life_Expectancy",
          "type": "quantitative",
          "stack": true
        },
        "radius": {
          "field": "Life_Expectancy",
          "scale": {"type": "sqrt", "zero": true, "rangeMin": 10}
        },
        "color": {
          "field": "Life_Expectancy",
          "type": "quantitative",
          "scale": {
            "scheme": "lighttealblue"
          },
          "legend": null
        },
        "stroke": {
          "condition": {
            "param": "highlight",
            "empty": false,
            "value": "black"
          },
          "value": null
        },
        "strokeWidth": {
          "condition": {
            "param": "highlight",
            "empty": false,
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country Name", "type": "nominal", "title": "Country Name"},
          {"field": "Life_Expectancy", "type": "quantitative", "title": "Life_Expectancy", "format": ","},
          {"field": "rank", "type": "ordinal", "title": "Rank"}
        ]
      }
    },

    {
      "mark": {"type": "text", "fontSize": 18},
      "encoding": {
        "text": {"aggregate": "count", "type": "quantitative"},
        "theta": {"value": 0},
        "radius": {"value": 0}
      }
    }
  ],
  "transform": [
    {"filter": {"field": "Life_Expectancy", "valid": true}},
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "Life_Expectancy", "order": "descending"}]
    },
    {"calculate": "datum.rank <= topNumber ? true : false", "as": "filterResult"},
    {"filter": {"field": "filterResult", "equal": true}},
    {"filter": "continent_selection == null || datum.Continent == continent_selection"}
  ],
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    },
    "background": "#80B2B3"
  }
}
